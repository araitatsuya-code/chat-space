.chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group test
        %ul.main-header__left-box__member-list  Memberï¼š
      = link_to '', class: 'main-header__edit-btn' do
        Edit
    .messages
      = render @messages
    .form
      .form__input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__input-box__text', placeholder: 'type a message'
        .form__submit
          = f.label :image, class: 'form__input-box__image' do
            = icon('far', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
